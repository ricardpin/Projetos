@model CadeMeuBilhete.Models.Estudante
@{
    ViewBag.Title = "Cartão Escolar";
    Layout = null;
}
<title>Cadê Meu Bilhete?</title>

<!-- Bootstrap core CSS -->
<link href="@Url.Content("~/Content/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet">

<!-- Custom fonts for this template -->

<link href="@Url.Content("~/Content/vendor/fontawesome-free/css/all.min.css")" rel="stylesheet">

<link href="@Url.Content("~/Content/vendor/fontawesome-free/css/brands.min.css")" rel="stylesheet">


<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
<link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
<link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
<link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>

<!-- Custom styles for this template -->
<link href="@Url.Content("~/Content/css/agency.min.css")" rel="stylesheet">

<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color:#000000" id="mainNav">
    <div id="page-top" class="container">
        <a class="navbar-brand js-scroll-trigger" href="#page-top">Cadê Meu Bilhete?</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            Menu
            <i class="fas fa-bars"></i>
        </button>
    </div>
    <ul class="navbar-nav text-uppercase ml-auto">
        <li class="nav-item">
            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link js-scroll-trigger" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Cartões", "Index", "Cartoes", new { area = "" }, new { @class = "nav-link js-scroll-trigger" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Contato", "Index", "Contato", new { area = "" }, new { @class = "nav-link js-scroll-trigger" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Cadastrar Empresa", "Index", "CadastroEmpresa", new { area = "" }, new { @class = "nav-link js-scroll-trigger" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Login Empresa", "Index", "LoginEmpresa", new { area = "" }, new { @class = "nav-link js-scroll-trigger" })
        </li>
    </ul>
</nav>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="conteudo"></div>
    <h2 class="text center-block text-muted" style="padding-top:130px; color:white !important;"></h2>

    <div class="align-content-md-center"></div>
    <h3 class="text-center text-muted" style=" color:darkgray !important"></h3>


    <section>
        <div class="form-horizontal text-center">
            <h3 class="text-center bg-warning">Cadastro Estudante - Passe Escolar</h3>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group text-center">
                @Html.LabelFor(model => model.CPF, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12 ">
                    <div class="value text-center">
                        <input type="number" size="20" maxlength="8" required />
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.CPF, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            @Html.Label("Endereço", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12 ">
                <div class="value text-center">
                    <input type="text" size="20" maxlength="64" required />
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Endereco, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(model => model.Bairro, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12 ">
                <div class="value text-center">
                    <input type="text" size="20" maxlength="8" required />
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Bairro, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(model => model.Cidade, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12 ">
                <div class="value text-center">
                    <input type="text" size="20" maxlength="8" required />
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Cidade, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(model => model.CEP, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                <div class="value text-center">
                    <input type="number" size="20" maxlength="8" required />
                    @Html.ValidationMessageFor(model => model.CEP, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group text-center">
            @Html.Label("Nome do Aluno", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12 ">
                <div class="value text-center">
                    <input type="text" size="20" maxlength="8" required />
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Nome_Aluno, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            @Html.Label("RG do Aluno", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12 ">
                <div class="value text-center">
                    <input type="number" size="20" maxlength="9" required />
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.RG_Aluno, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            @Html.Label("Nome do Responsável", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12 ">
                <div class="value text-center">
                    <input type="text" size="20" maxlength="64" required />
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Nome_Responsavel, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            @Html.Label("RG do Responsável", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12 ">
                <div class="value text-center">
                    <input type="number" size="20" maxlength="64" required />
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.RG_Responsavel, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            @Html.Label("Data de Nascimento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12 ">
                <div class="value text-center">
                    <input type="date" size="20" maxlength="8" required />
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Data_Nascimento, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                <div class="value text-center">
                    <input type="email" size="20" maxlength="64" required />
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-horizontal text-center">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Cadastrar" class="btn btn-sucess btn-dark" />
            </div>
        </div>
    </section>

}
<!-- Bootstrap core JavaScript -->
<script src="@Url.Content("~/Content/vendor/jquery/jquery.min.js")"></script>
<script src="@Url.Content("~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>

<!-- Plugin JavaScript -->
<script src="@Url.Content("~/Content/vendor/jquery-easing/jquery.easing.min.js")"></script>


<!-- Contact form JavaScript -->
<script src="@Url.Content("~/Content/js/jquery-2.1.4.min.js")"></script>
<script src="@Url.Content("~/Content/js/jquery.validation.min.js")"></script>

<!-- Custom scripts for this template -->
<script src="@Url.Content("~/Content/js/agency.min.js")"></script>

